{{#view "form-fields/form-section" model=view.model sectionTitle="Floor information"}}
    {{view "form-fields/text-form-field"
        model=view.model
        labelText="Name"
        field="name"
    }}

    {{view "form-fields/select-form-field"
        model=view.model
        content=view.parentView.nodesForSelect
        value=view.parentView.selectedNode
        labelText="Node"
        optionValuePath="content.value"
        optionLabelPath="content.label"
        name="node"
        field="node"
    }}
{{/view}}

