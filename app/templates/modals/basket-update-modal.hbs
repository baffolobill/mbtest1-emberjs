{{#view "form-fields/form-section" model=view.model sectionTitle="Basket information"}}
    {{view "form-fields/text-form-field"
        model=view.model
        labelText="Name"
        field="name"
    }}

    {{view "form-fields/text-form-field"
        model=view.model
        labelText="Height in units"
        field="unit_takes"
    }}

    {{view "form-fields/text-form-field"
        model=view.model
        labelText="Total slots Qty"
        field="slot_qty"
    }}

    {{view "form-fields/select-form-field"
        model=view.model
        content=view.parentView.racksForSelect
        value=view.parentView.selectedRack
        labelText="Rack"
        optionValuePath="content.value"
        optionLabelPath="content.label"
        name="rack"
        field="rack"
        prompt="---"
    }}
{{/view}}

