<thead>
    <tr>
        <th class="col-xs-1"><span>ID</span></th>
        <th><span>Name</span></th>
        <th class="col-xs-2"><span>Servers uses</span></th>
    </tr>
</thead>

{{#if view.loader.results.hasNextPage}}
    {{view "results/results-load-more" results=view.loader.results columns=3}}
{{/if}}

<tbody>
    {{#each result in view.loader.results}}
        <tr>
            <td>{{result.id}}</td>
            {{view "tables/cells/titled-linked-cell" routeName="servertemplate" item=result labelText=result.name}}
            <td>{{result.servers_uses}}</td>
        </tr>
    {{else}}
        <tr>
            <td colspan="3" class="no-results">
                {{#if view.loader.results.isLoaded}}
                    No Server Templates
                {{else}}
                    Loading...
                {{/if}}
            </td>
        </tr>
    {{/each}}
</tbody>
