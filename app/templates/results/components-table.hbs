<thead>
    <tr>
        <th class="col-xs-1"><span>ID</span></th>
        <th><span>Name</span></th>
        <th><span>Manufacturer</span></th>
        <th><span>Model name</span></th>
        <th><span>Serial Number</span></th>
        <th><span>Kind</span></th>
        <th><span>State</span></th>
        <th><span>Server</span></th>
    </tr>
</thead>

{{#if view.loader.results.hasNextPage}}
    {{view "results/results-load-more" results=view.loader.results columns=8}}
{{/if}}

<tbody>
    {{#each result in view.loader.results}}
        <tr>
            <td>{{result.id}}</td>
            {{view "tables/cells/titled-linked-cell" routeName="component" item=result labelText=result.name}}
            <td>{{result.manufacturer}}</td>
            <td>{{result.model_name}}</td>
            <td>{{result.serial_number}}</td>
            <td>{{result.json_kind.name}}</td>
            <td>{{result.state}}</td>
            {{view "tables/cells/titled-linked-cell" routeName="server" item=result.json_server.id labelText=result.json_server.name}}
        </tr>
    {{else}}
        <tr>
            <td colspan="8" class="no-results">
                {{#if view.loader.results.isLoaded}}
                    No Components
                {{else}}
                    Loading...
                {{/if}}
            </td>
        </tr>
    {{/each}}
</tbody>
